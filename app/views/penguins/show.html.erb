<div class="one">
  <div class="icon-bar">
    <%= link_to "delete", {method: :delete} do %>
      <%= image_tag(('delete_guin1.png'), :class => "edit_btn") %>
    <% end %>
    <%= link_to "edit", {method: :get} do %>
      <%= image_tag(('edit_guin1.png'), :class => "edit_btn") %>
    <% end %>
  </div>
</div>

<div class="two">
  <img src="<%= @penguin.image_url %>" class="profile_pic">
</div>

<div class="three">
  <h1> <%= @penguin.name %> </h1>
  <br>
  <ul class="profile_ul"> About Me
    <li>Title: <%= @penguin.title %></li>
    <li>Temperament: <%= @penguin.temp %></li>
    <li>Status: <%= @penguin.alive_or_dead %></li>
    <li>Species: <%= @penguin.species %></li>
    <li>Colony: <%= link_to @penguin.colony.name, @penguin.colony %> </li>
  </ul>

</div>
