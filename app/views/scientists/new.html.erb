<div class="the_forms">

  <h1>New User</h1>
    <% if flash[:errors] %>
      <div class="the_errors">
      <h3>(｡•́ ⌔ •̀｡) Oh no... </h3>
        <ul>
          <% flash[:errors].each do |error| %>
          <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <%= form_for @scientist do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :age %><br>
  <%= f.number_field :age %><br>
  <%= f.label :bio %><br>
  <%= f.text_field :bio %><br>
  <%= f.label :username %><br>
  <%= f.text_field :username %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.submit %>
  <% end  %>

</div>
